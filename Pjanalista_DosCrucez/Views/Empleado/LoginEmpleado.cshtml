@{
}
@model EmpleadoModel

<div class="card">
    <div class="card-header">
        <h1>Login</h1>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="row mb-3">
                <label for="UsuarioEmpleado" class="col-sm-2 col-form-label">Usuario</label>
                @Html.EditorFor(model => Model.UsuarioEmpleado, new { htmlAttributes = new { @class = "form-control" } })
                
            </div>
            <div class="row mb-3">
                <label for="PasswordEmpleado" class="col-sm-2 col-form-label">Contraseña</label>
                @Html.EditorFor(model => Model.PasswordEmpleado, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
        </form>
    </div>
 </div>
